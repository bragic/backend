{
  "scriptFile": "__init__.py",
  "bindings": [
    {
      "authLevel": "anonymous",
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "methods": [
        "get",
        "post"
      ]
    },
    {
      "type": "http",
      "direction": "out",
      "name": "$return"
    },   
    {
      "type": "cosmosDB",
      "direction": "in",
      "name": "inputDocument",
      "databaseName": "my-database",
      "collectionName": "Counter",
      "createIfNotExists": false,
      "connectionStringSetting": "CosmosDbConnectionString"
    },
    {
      "type": "cosmosDB",
      "direction": "out",
      "name": "outputDocument",
      "databaseName": "my-database",
      "collectionName": "Counter",
      "createIfNotExists": false,
      "connectionStringSetting": "CosmosDbConnectionString"
    }
  ]
}